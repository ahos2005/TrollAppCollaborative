<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.ucsd.troll.app.MainActivity"
    android:background="@drawable/coffeecup">

    <TextView
        android:id="@+id/factText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/steam_cloud"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="We Know..."
        android:textAlignment="center" />
    
<!--     <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/factText"
        android:layout_above="@+id/profileBtn"
        android:src="@drawable/coffee_cup_00"
        /> -->
    
    <Button
        android:id="@+id/profileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="@string/Profile"
        />

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/profileBtn"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="@string/Menu"
        />
    

    <Button
        android:id="@+id/mapsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/menuBtn"
        android:layout_alignRight="@+id/profileBtn"
        android:fitsSystemWindows="true"
        android:textColor="#FFFFFF"
        android:text="@string/Maps"
         />
    
</RelativeLayout>
